<!DOCTYPE html>
<html lang="ja">
<head>
  <%- include('../../include/metadata.ejs') %>
  <title>Document</title>
  <%- include('../../include/stylesheets.ejs') %>
</head>
<body>
  <div class="outerframe">
    <%- include('../../include/navbar.ejs') %>
    <main class="container" role="main">
      <div class="border-bottom my-5">
        <h1>口コミの投稿</h1>
      </div>

      <div>
        <form action="/account/reviews/regist/confirm" method="POST">
          <input type="hidden" name="shopId" id="shopId" value="<%= shopId %>">
          <div class="form-group row">
            <label for="shopName" class="col-sm-2 col-form-label">店舗</label>
            <div class="col-sm-10">
              <input type="text" class="form-control-plaintext" id="shopName" name="shopName" value="<%= shopName %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="visit" class="col-sm-2 col-form-label">訪問日</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control" id="visit" name="visit" value="<%#= review.visit ? moment(review.visit).format('YYYY/MM/DD') : '' %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="score" class="col-sm-2 col-form-label">評価</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control" id="score" name="score" value="<%= review.score %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="description" class="col-sm-2 col-form-label">本文</label>
            <div class="col-sm-10">
              <textarea class="form-control" readonly name="descri" id="description" rows="5"><%= (review.description || '') %></textarea>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              <input type="submit" class="btn btn-primary" value="修正">
              <input type="submit" class="btn btn-primary" value="登録">
            </div>
          </div>
        </form>
      </div>
    </main>
    <%- include('../../include/footer.ejs') %>
  </div>
  <%- include('../../include/javascripts.ejs') %>
</body>
</html>