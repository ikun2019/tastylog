<% if (review) { %>
  <div class="row">
    <div class="col-sm-3 text-truncate">
      <span class="h1"><i class="fa fa-fw fa-user"></i></span>
      <span><%= review.user_name %></span>
    </div>
    <div class="col-sm-9">
      <div class="card bg-light mb-3 balloon">
        <div class="card-body">
          <div class="row">

            <div class="col-sm-11">
              <p class="card-text" style="min-height: 2rem;"><%= review.description %></p>
              <p class="card-text text-muted">
                <small>
                  訪問日:<%= visit ? moment(review.visit).format('YYYY/MM/DD') : '-' %>
                  <span class="rate-start" style="--rate: <%= (review.score/5.00) * 100 %>%"></span><%= review.score %>
                </small>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <div class="row">
    <p>まだ口コミはありません。</p>
  </div>
<% } %>